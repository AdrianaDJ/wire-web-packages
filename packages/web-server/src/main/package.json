  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-react": "7.0.0",
    "@types/dotenv": "6.1.0",
    "@types/express": "4.17.0",
    "@types/fs-extra": "8.0.0",
    "@types/helmet": "0.0.43",
    "@types/request": "2.48.2",
    "@types/uuid": "3.4.5",
    "@wireapp/tslint-config": "1.4.1",
    "cross-env": "5.2.0",
    "generate-changelog": "1.8.0",
    "jasmine": "3.3.1",
    "jszip": "3.2.2",
    "nodemon": "1.19.1",
    "opn": "5.5.0",
    "prettier": "1.18.2",
    "request": "2.88.0",
    "rimraf": "2.6.3",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "tslint-react": "4.0.0",
    "tslint-react-hooks": "2.2.1",
    "typescript": "3.5.3",
    "webpack-dev-middleware": "3.7.0",
    "webpack-hot-middleware": "2.25.0"
  },
  "name": "wire-web-server",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/wireapp/wire-pwa"
  },
  "scripts": {
    "build": "yarn clean && tsc -P tsconfig.json && node ./bin/copy_server_assets.js && node ./bin/create_commit_sha_file.js",
    "clean": "rimraf ./dist",
    "check": "yarn audit",
    "fix": "yarn fix:ts",
    "fix:ts": "yarn lint:ts --fix",
    "lint": "yarn lint:ts",
    "lint:ts": "tslint --config tslint.json --project tsconfig.json",
    "start": "yarn build && cross-env NODE_ENV=development node dist/index.js",
    "start:prod": "pm2 start \"./index.js\" --name \"PWA\" && pm2 logs",
    "test": "exit 0"
  }
}
